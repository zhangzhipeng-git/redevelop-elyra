{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "strictNullChecks": true,
    "target": "es2015",
    "types": ["jest"],
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "allowJs": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", ".eslintrc.js", "webpack.config.js"]
}
