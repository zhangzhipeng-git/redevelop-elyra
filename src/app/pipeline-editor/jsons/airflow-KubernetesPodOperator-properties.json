          "minimum": 1
        },
        "taskMemory": {
          "type": "integer",
          "title": "内存(GB)",
          "description": "指定的RAM大小",
          "default": 2,
          "minimum": 1
        },
        "num_executors": {
          "type": "integer",
          "title": "executor数量(个)",
          "description": "executor数量",
          "default": 1,
          "minimum": 1
        },
        "k8spodConf": {
          "type": "string",
          "title": "k8sPod配置参数",
          "description": "k8sPod配置参数"
        },
        "_requestParameter": {
          "type": "string",
          "title": "依赖包管理文件",
          "description": "依赖包管理文件",
          "uihints": {
            "ui:widget": "file",
            "extensions": ".txt"
          }
        }
      },
      "required": [
        "taskName",
        "type",
        "_mainApplicationFile",
        "connId"
      ]
