        "taskName": {
          "type": "string",
          "title": "任务名称",
          "description": "任务名称",
          "uihints": {
            "ui:placeholder": "请填写任务名称"
          }
        },
        "type": {
          "type": "string",
          "title": "任务类型",
          "description": "任务类型",
          "default": "Python",
          "enum": [
            "java",
            "Python",
            "scala"
          ]
        },
        "_mainApplicationFile": {
          "type": "string",
          "title": "任务文件",
          "description": "任务文件",
          "uihints": {
            "ui:widget": "file",
            "extensions": [
              ".py",
              ".jar"
            ]
          }
        },
        "connId": {
          "type": "string",
          "title": "k8s集群连接信息",
          "description": "k8s集群连接信息，根据PIPELINE属性中的选择的归属应用查询得出。",
          "enum": []
        },
        "connectionId": {
          "type": "number",
          "title": "资源id",
          "description": "资源id",
          "uihints": {
            "ui:field": "hidden"
          }
        },
        "namespace": {
          "type": "string",
          "title": "租户空间",
          "description": "租户空间，由连接信息带出",
          "uihints": {
            "ui:readonly": true
          }
        },
        "taskCpu": {
          "type": "integer",
          "title": "CPU(个)",
          "description": "对于CPU密集型工作负载，您可以选择多个CPU",
