{
  "type": "object",
  "properties": {
    "component_parameters": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "任务名称",
          "description": "任务名称",
          "uihints": {
            "ui:placeholder": "请填写任务名称"
          }
        },
        "type": {
          "type": "string",
          "title": "任务类型",
          "description": "任务类型",
          "default": "python",
          "enum": [
            "java",
            "python",
            "scala"
          ]
        },
        "localFile": {
          "type": "string",
          "title": "文件路径",
          "description": "文件路径",
          "uihints": {
            "ui:widget": "file",
            "extensions": [
              ".py",
              ".jar"
            ]
          }
        },
        "mainClass": {
          "type": "string",
          "title": "启动Pod的类名",
          "description": "启动Pod的类名（只有Java、scala类型任务需要此项）",
          "uihints": {
            "ui:placeholder": "请填写启动Pod的类名"
          }
        },
        "connection": {
          "type": "string",
          "title": "k8s集群连接信息",
          "description": "k8s集群连接信息",
          "enum": []
        },
        "namespace": {
          "type": "string",
          "title": "命名空间",
          "description": "命名空间",
          "uihints": {
            "ui:readonly": true
          }
        },
        "taskCpu": {
          "type": "integer",
          "title": "CPU(个)",
          "description": "对于CPU密集型工作负载，您可以选择多个CPU",
          "default": 1,
          "minimum": 1
        },
        "taskMemory": {
          "type": "integer",
          "title": "内存(GB)",
          "description": "指定的RAM大小",
          "default": 2,
          "minimum": 1
        },
        "num_executors": {
          "type": "integer",
          "title": "executor数量(个)",
          "description": "executor数量",
          "default": 1,
          "minimum": 1
        },
        "cmds": {
          "title": "bash命令",
          "description": "bash命令",
          "type": "string"
        }
      },
      "required": [
        "name",
        "type",
        "localFile",
        "connection"
      ]
    }
  },
  "required": [
    "component_parameters"
  ]
}