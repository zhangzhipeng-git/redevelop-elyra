{
  "type": "object",
  "properties": {
    "component_parameters": {
      "type": "object",
      "properties": {
        "taskName": {
          "type": "string",
          "title": "任务名称",
          "description": "任务名称"
        },
        "type": {
          "type": "string",
          "title": "Spark应用的类型",
          "description": "Spark应用的类型（java/python/scala)",
          "default": "Python",
          "enum": [
            "java",
            "Python",
            "scala"
          ]
        },
        "_mainApplicationFile": {
          "type": "string",
          "title": "文件路径",
          "description": "文件路径",
          "uihints": {
            "ui:widget": "file",
            "extensions": [
              ".py",
              ".jar"
            ]
          }
        },
        "mainClass": {
          "type": "string",
          "title": "Spark应用程序主类",
          "description": "Spark应用程序主类(限定：Java/Scala)",
          "uihints": {
            "ui:placeholder": "请填写Spark应用程序主类"
          }
        },
        "connId": {
          "title": "k8s集群连接信息",
          "description": "k8s集群连接信息，根据PIPELINE属性中的选择的归属应用查询得出。",
          "type": "string",
          "enum": []
        },
        "connectionId": {
          "type": "string",
          "title": "资源id",
          "description": "资源id",
          "uihints": {
            "ui:field": "hidden"
          }
        },
        "namespace": {
          "type": "string",
          "title": "租户空间",
          "description": "租户空间，由连接信息带出",
          "uihints": {
            "ui:readonly": true
          }
        },
        "taskCpu": {
          "type": "integer",
          "title": "CPU(个)",
          "description": "对于CPU密集型工作负载，您可以选择多个CPU",
          "default": 1,
          "minimum": 1
        },
        "taskMemory": {
          "type": "integer",
          "title": "内存(GB)",
          "description": "指定的RAM大小",
          "default": 2,
          "minimum": 1
        },
        "num_executors": {
          "type": "integer",
          "title": "executor数量(个)",
          "description": "executor数量",
          "default": 1,
          "minimum": 1
        },
        "sparkConf": {
          "type": "array",
          "title": "spark配置参数",
          "description": "spark配置参数",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string",
                "title": "key"
              },
              "value": {
                "type": "string",
                "title": "value"
              }
            }
          }
        },
        "hadoopConf": {
          "type": "array",
          "title": "hadoopConf配置参数",
          "description": "hadoopConf配置参数",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "key": {
                "type": "string",
                "title": "key"
              },
              "value": {
                "type": "string",
                "title": "value"
              }
            }
          }
        },
        "pyPackages": {
          "type": "array",
          "title": "pyPackages",
          "description": "pyPackages(只有任务类型为python时才需要填写)",
          "items": {
            "type": "string"
          }
        },
        "dependencies": {
          "type": "array",
          "title": "依赖项",
          "description": "依赖项(只有当任务类型为Java时才需要选填，其他类型不需要填)",
          "items": {
            "type": "string"
          }
        },
        "exDependencies": {
          "type": "array",
          "title": "排除依赖项",
          "description": "排除依赖项(只有当任务类型为Java时才需要选填，其他类型不需要填)",
          "items": {
            "type": "string"
          }
        },
        "_tarPath": {
          "type": "string",
          "title": "tar路径",
          "description": "tar路径(只有任务类型为python时才需要填写)",
          "items": {
            "type": "string"
          },
          "uihints": {
            "files": true,
            "extensions": [
              "*"
            ]
          }
        },
        "_jars": {
          "type": "array",
          "title": "jar文件集合",
          "description": "jar文件集合",
          "items": {
            "type": "string"
          },
          "uihints": {
            "files": true,
            "extensions": [
              "*"
            ]
          }
        },
        "_files": {
          "type": "array",
          "title": "文件集合",
          "description": "文件集合",
          "items": {
            "type": "string"
          },
          "uihints": {
            "files": true,
            "extensions": [
              "*"
            ]
          }
        }
      },
      "required": [
        "taskName",
        "type",
        "_mainApplicationFile",
        "connId"
      ]
    }
  },
  "required": [
    "component_parameters"
  ]
}